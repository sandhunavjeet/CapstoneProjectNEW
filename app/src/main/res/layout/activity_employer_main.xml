<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".EmployerMainActivity">

    <LinearLayout
        android:id="@+id/emplrMain_ll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/emplrMain_tv_title"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="30sp"
            app:fontFamily="sans-serif-smallcaps"
            android:text="EMPLOYER HOME" />

        <Button
            android:id="@+id/emplrMain_bt_Post"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="POST NEW JOB" />

        <Button
            android:id="@+id/emplrMain_bt_ViewAll"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="VIEW POSTED JOBS" />

        <Button
            android:id="@+id/emplrMain_bt_New"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="VIEW NEW REQUESTS" />

        <Button
            android:id="@+id/emplrMain_bt_changepwd"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHANGE PASSWORD" />

        <Button
            android:id="@+id/emplrMain_bt_logout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGOUT" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>