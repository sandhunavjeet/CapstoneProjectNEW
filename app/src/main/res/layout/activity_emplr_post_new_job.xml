<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="20dp"
android:paddingLeft="16dp"
android:paddingRight="16dp"
android:paddingTop="16dp"
android:background="#FFFFFF"
tools:context=".EmplrPostNewJob"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/emplr_post_imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/register" />
    <TextView
        android:id="@+id/emplr_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POST NEW JOB"
        android:textSize="30sp"
        />

    <EditText
        android:id="@+id/emplr_post_edtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/emplr_post_edtPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pay"
        android:inputType="text|numberDecimal" />

    <EditText
        android:id="@+id/emplr_post_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false"
        android:hint="Appointment Date"
        android:inputType="date" />
    <EditText
        android:id="@+id/emplr_post_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Appointment Time"
        android:focusableInTouchMode="false"
        android:inputType="date" />

    <EditText
        android:id="@+id/emplr_post_edtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description "
        android:inputType="textPersonName"
        />
    <Button
        android:id="@+id/emplr_post_btnJob"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post Job" />

</LinearLayout>

</RelativeLayout>

