<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        app:cardCornerRadius="30dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/user_layout_cont_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="50dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/user_textView2_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="21dp"
                android:text="JOB TITLE"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/user_textView3_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="11dp"
                android:text="PAY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_textView2_apply" />

            <TextView
                android:id="@+id/user_textView4_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="APPOINTMENT DATE"
                app:layout_constraintBaseline_toBaselineOf="@+id/user_jobs_date_apply"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/user_textView5_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="APPOINTMENT TIME"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_textView4_apply" />

            <TextView
                android:id="@+id/user_textView6_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="17dp"
                android:text="DESCRIPTION"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_textView5_apply" />

            <TextView
                android:id="@+id/user_jobs_pay_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="@+id/user_jobs_title_apply"
                app:layout_constraintTop_toBottomOf="@+id/user_jobs_title_apply" />

            <TextView
                android:id="@+id/user_jobs_title_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="21dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/user_textView4_apply"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/user_jobs_date_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="@+id/user_jobs_pay_apply"
                app:layout_constraintTop_toBottomOf="@+id/user_jobs_pay_apply" />

            <TextView
                android:id="@+id/user_jobs_time_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="14dp"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="@+id/user_jobs_date_apply"
                app:layout_constraintTop_toBottomOf="@+id/user_jobs_date_apply" />

            <TextView
                android:id="@+id/user_jobs_desc_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="21dp"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="@+id/user_jobs_time_apply"
                app:layout_constraintTop_toBottomOf="@+id/user_jobs_time_apply" />

            <TextView
                android:id="@+id/user_textView7_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="46dp"
                android:layout_marginRight="46dp"
                android:text="COMPANY NAME"
                app:layout_constraintEnd_toStartOf="@+id/user_jobs_name_apply"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_textView6_apply" />

            <TextView
                android:id="@+id/user_jobs_name_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="21dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/user_textView7_apply"
                app:layout_constraintTop_toBottomOf="@+id/user_jobs_desc_apply" />

            <TextView
                android:id="@+id/user_textView9_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="18dp"
                android:text="COMPANY EMAIL"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_textView7_apply" />

            <TextView
                android:id="@+id/user_jobs_email_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="49dp"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/user_textView9_apply"
                app:layout_constraintTop_toBottomOf="@+id/user_jobs_name_apply" />

            <TextView
                android:id="@+id/user_textView11_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="16dp"
                android:text="CONTACT NUMBER"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_textView9_apply" />

            <TextView
                android:id="@+id/user_jobs_contact_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="21dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/user_textView11_apply"
                app:layout_constraintTop_toBottomOf="@+id/user_jobs_email_apply" />

            <TextView
                android:id="@+id/user_jobs_status_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="118dp"
                android:layout_marginLeft="118dp"
                android:layout_marginTop="16dp"
                android:text="STATUS"
                android:textColor="#FF1744"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_jobs_contact_apply" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>